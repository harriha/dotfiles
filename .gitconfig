[user]
	name = harriha
	email = harri.halikka@gmail.com
[push]
	default = upstream
[core]
	safecrlf = false
	autocrlf = input
#	editor = 'C:/Program Files (x86)/Notepad++/notepad++.exe' -multiInst -notabbar -nosession -noPlugin
#	editor = 'C:/Program Files/Sublime Text 3/sublime_text.exe' --wait --multiinstance
	excludesfile = ~/.gitignore

[branch]
	autosetuprebase = always

[rebase]
	autosquash = true

[pull]
  rebase = preserve

[alias]
  st = status
  ci = commit
  br = branch
  ch = checkout
  df = diff
  logf = "log --follow"
  lg = log --graph --pretty=format:'%C(green ul)%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  activity = for-each-ref --sort=-committerdate refs/heads/ --format='%(committerdate:short) %(authorname) %(refname:short)'
  summary = show --pretty="format:" --name-only
  gg = !git grep -i
  
[color "status"]
    changed = blue reverse white
    untracked = red reverse
